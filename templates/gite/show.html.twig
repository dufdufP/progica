{% extends "base.html.twig" %}

{% block title %} Le gite {% endblock %}

{% block body %}

    <div class="row">
        <h1> Le gite {{gite.name}}</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-stripped">
                <thead>
                    <th>Surface</th>
                    <th>Chambre</th>
                    <th>Animaux</th>
                </thead>
                <tbody>
                    <tr>{{gite.surface}}</tr>
                    <tr>{{gite.bedrooms}}</tr>
                    <tr>{{gite.animals}}</tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6"></div>
    </div>

{% endblock %}

